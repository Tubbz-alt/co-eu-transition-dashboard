{% macro measureInformation(latestMeasure, url, metricId, data) %}

  <div class="govuk-form-group">
    <label class="govuk-label govuk-!-font-weight-bold" for="entity-{{ measure.id }}">Name</label>
    <input class="govuk-input govuk-!-width-three-quarters" type="text" id="entity-{{ measure.id }}" name="entities[{{ measure.name }}]" value="{{ latestMeasure.name }}" />
  </div>

  <div class="govuk-form-group">
    <label class="govuk-label govuk-!-font-weight-bold" for="entity-{{ measure.id }}">Description</label>
    <input class="govuk-input govuk-!-width-three-quarters" type="text" id="entity-{{ measure.id }}" name="entities[{{ measure.name }}]" value="{{ latestMeasure.description }}" />
  </div>

  <button class="govuk-button" data-module="govuk-button" type="submit">Add and save value</button>

{% endmacro %}