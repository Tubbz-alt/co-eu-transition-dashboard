{% macro accordion(params) %}
  {% set id = params.id %}
  {% set headingLevel = params.headingLevel if params.headingLevel else 2 %}

  <div class="govuk-accordion {%- if params.classes %} {{ params.classes }}{% endif -%}" data-module="govuk-custom-accordion" id="{{ id }}"
  {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
    {% for item in params.items %}
      {% if item %}
        <div class="govuk-accordion__section item-colour-{{ item.color }} govuk-accordion__section-{{ id }} {% if item.expanded or item.active  %}govuk-accordion__section--expanded{% endif %}">
          <div class="govuk-accordion__section-header section-header-{{ item.level }}">
            <h{{ headingLevel }} class="govuk-accordion__section-heading govuk-heading-s">
              <span class="govuk-accordion__section-button" id="{{ id }}-heading-{{ loop.index }}">
                {{ item.heading.html | safe if item.heading.html else item.heading.text }}
              </span>
            </h{{ headingLevel }}>
            {% if item.summary.html or item.summary.text %}
              <div class="govuk-accordion__section-summary govuk-body" id="{{ id }}-summary-{{ loop.index }}">
                {{ item.summary.html | safe if item.summary.html else item.summary.text }}
              </div>
            {% endif %}
          </div>
          <div id="{{ id }}-content-{{ loop.index }}" class="govuk-accordion__section-content" aria-labelledby="{{ id }}-heading-{{ loop.index }}">
            {{ item.content.html | safe if item.content.html else item.content.text }}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endmacro %}

{% macro content(items) %}
  <ul>
    {% for item in items %}
      <li>{{ item.name }}</li>
    
    {% endfor %}
  </ul>
{% endmacro %}

{% macro buildOutcomeTree(items, level) %}
  {% set outcomesArray = [] %}

  {% for item in items %}
    {% if (item.children | length >= 1) and not item.isLastExpandable %}
        {% set htmlContent = buildOutcomeTree(item.children, level + 1) %}
    {% elif item.children | length >= 1 and item.isLastExpandable %}
        {% set htmlContent = content(item.children) %}
    {% else %}
        {% set htmlContent = 'No Content' %}
    {% endif %}
    {% set outcomesArray = (outcomesArray.push ({
      active: item.active,
      level: level,
      color: item.color,
      heading: {
        text: item.name
      },
      content: {
        html: htmlContent
      }
    }), outcomesArray) %}
  {% endfor %}

  {{ accordion({
    id: 'accordion-default-' + level,
    classes: 'accordion-level-' + level,
    items: outcomesArray
  }) }}
{% endmacro %}