{% macro searchMeasures(url) %}
    <div class="govuk-form-group">
        <div class="govuk-input__wrapper search" id="search">
            <div class="input-wrapper">
                <input class="govuk-input govuk-input--width-20 search-input" type="text" name="term" title="Type search term here" placeholder="Search Measures">
                <div class="clear-search">
                    <button class="clear-search-button hidden" type="button" title="Clear search button">
                        <span class="clear-search-icon"></span>
                    </button>
                </div>
            </div>
            <div class="govuk-input__suffix search-background" aria-hidden="true">
                <button class="search-button" title="Search button" data-module="govuk-button"><span class="search-icon"></span></button>
            </div>
        </div>
    </div>
{% endmacro %}