{% macro searchMeasures(url) %}
<form method="GET" action="{{ url }}">
    <div class="govuk-form-group">
        <div class="govuk-input__wrapper search" id="search">
            <input class="govuk-input govuk-input--width-20 search-input" type="text" name="term">
            <div class="clear-search">
                <button class="clear-search-button hidden" type="button"><span class="clear-search-icon"></span></button>
            </div>
            <div class="govuk-input__suffix search-background" aria-hidden="true">
                <button class="search-button" data-module="govuk-button"><span class="search-icon"></span></button>
            </div>
        </div>
    </div>
</form>
{% endmacro %}