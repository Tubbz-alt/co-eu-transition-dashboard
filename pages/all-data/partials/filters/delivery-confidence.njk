{% if form.deliveryConfidence %} 
{% set deliveryConfidence = form.deliveryConfidence %}
{% else %} 
{% set deliveryConfidence = [] %}
{% endif %}

{{ govukCheckboxes({
  idPrefix: "delivery-confidence",
  name: "deliveryConfidence",
  items: [
    {
      value: "0",
      text: "0 - Very low confidence",
      checked: deliveryConfidence == '0',
      checked: '0' in deliveryConfidence
    },
    {
      value: "1",
      text: "1 - Low confidence",
      checked: deliveryConfidence == '1',
      checked: '1' in deliveryConfidence
    },
    {
      value: "2",
      text: "2 - Medium confidence",
      checked: deliveryConfidence == '2',
      checked: '2' in deliveryConfidence
    },
    {
      value: "3",
      text: "3 - High confidence",
      checked: deliveryConfidence == '3',
      checked: '3' in deliveryConfidence
    }
  ]
}) }}