{% set currentYear = "01/01/" + currentDate() | date("YYYY") %}
{% set nextYear = "01/01/" + currentDate() | date("add", 1, "year") | date("YYYY") %}

{{ govukInput({
  label: {
    text: "From"
  },
  classes: "govuk-input--width-10",
  hint: {
    html: "For example, " + currentYear
  },
    id: "fromDate",
    name: "fromDate",
    value: currentYear
}) }}
{{ govukInput({
  label: {
    text: "To"
  },
  classes: "govuk-input--width-10",
  hint: {
    text: "For example, " + nextYear
  },
    id: "toDate",
    name: "toDate",
    value: nextYear
}) }}